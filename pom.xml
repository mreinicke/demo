			<groupId>org.webjars</groupId>
			<artifactId>jasmine</artifactId>
			<version>2.0.0</version>
			<scope>test</scope>
		</dependency>

		<!--Logging-->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
